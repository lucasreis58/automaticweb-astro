---
// Arquivo: src/components/BlogPostCard.astro
const { post } = Astro.props;
---

<article class="card">
    <a href={`/blog/${post.slug}`} class="card-link">
        <img
                src={post.data.image}
                alt={`Imagem de capa para o post: ${post.data.title}`}
                class="card-image"
        />
        <div class="card-content">
            <h3 class="card-title">{post.data.title}</h3>
            <p class="card-description">{post.data.description}</p>
        </div>
    </a>
</article>

<style>
    .card {
        background-color: var(--dark-bg-secondary);
        border-radius: 8px;
        border: 1px solid var(--border-color);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 230, 118, 0.1);
    }
    .card-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    .card-image {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
    }
    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }
    .card-title {
        font-size: 1.25rem;
        line-height: 1.3;
        color: var(--title-text);
        margin-bottom: 0.5rem;
    }
    .card-description {
        font-size: 1rem;
        line-height: 1.5;
        color: var(--light-text);
        flex-grow: 1;
    }
</style>